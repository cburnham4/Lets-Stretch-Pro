<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="@dimen/routine_image_dimen"
        android:layout_height="@dimen/routine_image_dimen"
        android:layout_margin="@dimen/routine_image_margin"

        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"
        android:id="@+id/img_routine"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_routine"
        android:layout_toEndOf="@+id/img_routine"
        android:id="@+id/tv_routine"
        android:layout_marginLeft="@dimen/routine_text_margin_left"
        android:textSize="@dimen/routine_text_size"
        android:fontFamily="sans-serif"
        android:textColor="@color/black">
    </TextView>

</RelativeLayout>